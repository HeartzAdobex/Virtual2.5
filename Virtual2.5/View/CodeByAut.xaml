<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Virtual2._5.View.CodeByAut"
             Title="CodeByAut">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <AbsoluteLayout x:Name="MainLayout" Grid.Row="0">
            <Image x:Name="BackgroundImage" 
                   Aspect="AspectFit" 
                   HorizontalOptions="FillAndExpand" 
                   VerticalOptions="FillAndExpand" />
        </AbsoluteLayout>

        <StackLayout Orientation="Horizontal" Grid.Row="1" HorizontalOptions="FillAndExpand">
            <Button Text="Set Background" Clicked="OnSetBackgroundClicked" HorizontalOptions="FillAndExpand" />
            <Button Text="Pick Image" Clicked="OnPickImageClicked" HorizontalOptions="FillAndExpand" />
            <Button Text="Clear Images" Clicked="OnClearImagesClicked" HorizontalOptions="FillAndExpand" />
        </StackLayout>
    </Grid>
</ContentPage>